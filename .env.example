DATABASE_URL=postgresql://user:password@host:5432/dbname
OPENAI_API_KEY=sk-...
PDL_API_KEY=your-people-data-labs-api-key
RESEND_API_KEY=re_...
# Override all outgoing email to this address (remove once domain is verified in Resend)
# EMAIL_OVERRIDE=you@example.com
NEXTAUTH_SECRET=generate-a-random-secret-here
NEXTAUTH_URL=http://localhost:3000

# News ingestion (register free at https://newsapi.ai/register — 2,000 free searches)
NEWSAPI_AI_KEY=your-newsapi-ai-key

# AI Research APIs (optional — pipeline runs without them but produces fewer signals)
PERPLEXITY_API_KEY=pplx-...
TAVILY_API_KEY=tvly-...

# Google Trends via SerpAPI (optional — scoring agent skips trend checks without it)
SERPAPI_API_KEY=your-serpapi-key

# Cron job authentication — set this to a random secret to secure /api/cron/* endpoints
CRON_SECRET=generate-a-random-secret-here

# Logging level — debug | info | warn | error (defaults to info in production, debug otherwise)
# LOG_LEVEL=info

# App URL for the cron trigger script (Railway cron service calls these endpoints)
APP_URL=https://your-app.up.railway.app

# Google Calendar OAuth (optional — calendar sync features require this)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Inbound email webhook signing secret (for channel reply processing)
INBOUND_EMAIL_SECRET=generate-a-random-secret-here
