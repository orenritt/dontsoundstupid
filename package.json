{
  "name": "dontsoundstupid",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest run",
    "test:unit": "vitest run --exclude 'src/lib/__tests__/pipeline-smoke.test.ts' --exclude 'src/lib/__tests__/data-sources.test.ts' --exclude 'src/lib/__tests__/knowledge-gap-smoke.test.ts'",
    "test:ci": "vitest run --exclude 'src/lib/__tests__/pipeline-smoke.test.ts' --exclude 'src/lib/__tests__/data-sources.test.ts' --exclude 'src/lib/__tests__/knowledge-gap-smoke.test.ts' --reporter=verbose",
    "test:coverage": "vitest run --coverage --exclude 'src/lib/__tests__/pipeline-smoke.test.ts' --exclude 'src/lib/__tests__/data-sources.test.ts' --exclude 'src/lib/__tests__/knowledge-gap-smoke.test.ts'",
    "test:smoke": "vitest run --config vitest.smoke.config.ts src/lib/__tests__/pipeline-smoke.test.ts",
    "test:smoke:gaps": "vitest run --config vitest.smoke.config.ts src/lib/__tests__/knowledge-gap-smoke.test.ts",
    "test:sources": "vitest run --config vitest.smoke.config.ts src/lib/__tests__/data-sources.test.ts",
    "test:e2e": "npx playwright test",
    "test:e2e:onboarding": "npx playwright test e2e/onboarding-flow.spec.ts",
    "test:e2e:briefing": "npx playwright test e2e/briefing-feedback.spec.ts",
    "test:e2e:settings": "npx playwright test e2e/onboarding-to-settings.spec.ts",
    "test:e2e:crons": "npx playwright test e2e/cron-jobs.spec.ts",
    "test:e2e:crons:live": "E2E_LIVE_CRONS=1 npx playwright test e2e/cron-jobs.spec.ts",
    "test:deploy": "npm run test:ci && npm run build",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "deploy": "railway up --detach",
    "logs": "railway logs",
    "railway:vars": "railway variables",
    "railway:status": "railway status"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "drizzle-orm": "^0.44.2",
    "framer-motion": "^12.12.2",
    "next": "^15.3.3",
    "next-auth": "^5.0.0-beta.25",
    "openai": "^4.103.0",
    "postgres": "^3.4.7",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "resend": "^6.9.2",
    "rss-parser": "^3.13.0",
    "zod": "^3.25.32"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv": "^17.3.1",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9",
    "eslint-config-next": "^15.3.3",
    "tailwindcss": "^4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
